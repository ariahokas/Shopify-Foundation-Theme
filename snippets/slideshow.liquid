<div class="large-12 columns">

	<!-- Desktop Slider -->

	  <div class="hide-for-small">

		<div class="slideshow-wrapper">
		  <div class="preloader"></div>
			<ul data-orbit data-options="bullets:false;{% if settings.slideshow_pause %}pause_on_hover:true;resume_on_mouseout:true;{% else %}pause_on_hover:false;{% endif %}" class="text-center">
				<li>
					{{ 'slideshow_image_1.png' | asset_url | img_tag: shop.name }}
					<div class="orbit-caption">
						<h2>{{ settings.slideshow_1_header }}</h2> 
						<p>{{ settings.slideshow_1_p }}</p>
						<a class="button" href="{{ settings.slideshow_1_link }}">{{ settings.slideshow_1_button }}</a>
					</div>
				</li>
				{% if settings.slideshow_image_2_enable %}
				<li>
					{{ 'slideshow_image_2.png' | asset_url | img_tag: shop.name }}
					<div class="orbit-caption">
						<h2>{{ settings.slideshow_2_header }}</h2> 
						<p>{{ settings.slideshow_2_p }}</p>
						<a class="button" href="{{ settings.slideshow_2_link }}">{{ settings.slideshow_2_button }}</a>
					</div>
				</li>
				{% endif %}
				{% if settings.slideshow_image_3_enable %}
				<li>
					{{ 'slideshow_image_3.png' | asset_url | img_tag: shop.name }}
					<div class="orbit-caption">
						<h2>{{ settings.slideshow_3_header }}</h2> 
						<p>{{ settings.slideshow_3_p }}</p>
						<a class="button" href="{{ settings.slideshow_3_link }}">{{ settings.slideshow_3_button }}</a>
					</div>
				</li>
				{% endif %}
			</ul>
		  </div>
		</div>
	<!-- End Desktop Slider -->
	<!-- Mobile Header -->

	<div class="row">
	  <div class="small-12 show-for-small"><br>
		<img src="http://placehold.it/1000x600&text=For Small Screens" />
	  </div>
	</div>

	<!-- End Mobile Header -->

</div>